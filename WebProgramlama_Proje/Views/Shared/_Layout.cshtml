@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.EntityFrameworkCore;
@using WebProgramlama_Proje.Data;

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProgramlama_Proje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-image: linear-gradient(to right bottom, #241138, #281e43, #2c2b4d, #323756, #3a435e, #3a445f, #3a445f, #3a4560, #313b59, #293052, #22264a, #1c1c42);">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3" style="height:50px; background-color:#171717; margin-top:5px; margin-right:20px;margin-left:20px">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Musluk</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a style="font-family:Arial; font-size:20px; color: floralwhite;" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family:Arial; font-size:20px; color: floralwhite;" class="nav-link" asp-area="" asp-controller="Store" asp-action="Index">@Localizer["Store"]</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family:Arial; font-size:20px; color: floralwhite;" class="nav-link" asp-area="" asp-controller="User" asp-action="Index">@Localizer["User"]</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family:Arial; font-size:20px; color: floralwhite;" class="nav-link" asp-area="" asp-controller="Game" asp-action="Index">@Localizer["Game"]</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - WebProje - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

