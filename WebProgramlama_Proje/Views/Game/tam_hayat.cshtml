@model WebProgramlama_Proje.Models.ViewModel

@{
    ViewData["Title"] = "Tam Hayat 3";
}
<!DOCTYPE html>
<html>

<head>
    <link href="@Url.Content("~/css/Game.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    @foreach (var item in Model.Games)
    {
        <h2>@item.gameName</h2>

        <br />

        <div class="row">
            <div class="columnVid">
                <iframe width="740" height="540"
                        src="https://www.youtube.com/embed/V7vDsarvyoc">
                </iframe>
            </div>
            <div class="columnDesc">
                <img src=@item.gameIMG class="descImage" />
                <br /><br /><br />
                <p class="description"> @item.gameDesc</p>
            </div>
        </div>

        <br /><br /><br />

        <div class="row">
            <div class="PurchaseDiv">
                <p class="PurchaseText"> Bu oyunu hemen satın alarak kütüphanene ekle</p>
            </div>
            <div class="PurchaseButton">

                @{

                    bool sahip = false;

                    foreach (var lib in Model.Libraries)
                    {
                        foreach (var kullanici in Model.Users)
                        {
                            if (kullanici.userMail == User.Identity.Name && lib.gameID == 2)
                            {
                                sahip = true;
                            }
                        }
                    }


                    if (sahip == true)
                    {
                        <button class="btn-grad">Kütüphanede</button>
                    }
                    else
                    {
                        <form action="" method="post">
                            <button asp-area="" asp-controller="Game" asp-action="tam_hayat_al" class="btn-grad">
                                @item.gamePrice TL
                            </button>
                        </form>
                    }

                }

            </div>
        </div>
    }
    <br /><br />
    <h4>MÜŞTERİ İNCELEMELERİ</h4>
    <br />

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div class="col-md-4">
                <form action="" method="post">

                    <p class="LoginText"></p>
                    <hr />
                    <div class="text-danger"></div>

                    <div class="form-group">
                        <label class="formHeader">Yorumunuz</label>
                        <br />
                        <input type="text" class="form-control" name="commentDesc" required="" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="formHeader">Bu oyunu öneriyor musunuz?</label>
                        <br />
                        <input type="checkbox" class="form-control" name="commentIsRecommend"/>
                        <span class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" value="Yorum Yaz" class="LoginButton center">Yorum Yaz</button>
                    </div>

                    <div class="form-group">
                        <a class="LoginPls" asp-area="" asp-controller="Game" asp-action="tam_hayat"></a>
                    </div>

                </form>
            </div>
        </div>
    }
    @foreach (var item in Model.Comments)
    {

        User kullanici = new User();
        @foreach (var kul in Model.Users)
        {
            if (kul.userID == item.userID)
            {
                kullanici = kul;
                break;
            }
        }

        <div class="comment">
            <img src="~/images/bir.png" class="UserImage">
            <p>
                <span>@kullanici.userName</span>
                @if (item.commentIsRecommend == 1)
                {
                    <span class="fa fa-thumbs-up" style="color:green"></span>
                }
                else
                {
                    <span class="fa fa-thumbs-down" style="color:red"></span>
                }
            </p>
            <p>@item.commentDesc</p>
        </div>
    }
</body>
</html>