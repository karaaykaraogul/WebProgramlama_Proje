@model WebProgramlama_Proje.Models.User

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>s
<body>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form action="#" method="post">
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    <div class="text-danger"></div>
                    <div class="form-group">
                        <label>User Mail</label>
                        <input type="text" class="userMail" name="userMail" required="" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>User Password</label>
                        <input type="text" class="userPass" name="userPass" required="" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="Login" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Create">Hesabın Yoksa Kayıt Ol</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
    <div>
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
